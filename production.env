# ============================================
# Server Configuration (Production)
# ============================================
NODE_ENV=production
PORT=5050

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=your_production_db_name
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password
# Or use a full connection URL (e.g. Supabase / RDS)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# JWT Configuration
# ============================================
# MUST use a strong, unique secret in production
# Generate with: openssl rand -base64 32
JWT_SECRET=your-production-jwt-secret-change-this
JWT_EXPIRES_IN=7d

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_production_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_access_key
S3_BUCKET_NAME=your-production-s3-bucket-name

# ============================================
# Session Configuration
# ============================================
# MUST use a strong, unique secret in production
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-production-session-secret-change-this

# ============================================
# CORS Configuration
# ============================================
# Set to your frontend origin(s), comma-separated
# Do NOT use * in production
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
